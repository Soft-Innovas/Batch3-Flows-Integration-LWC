<apex:page standardController="Account" showHeader="false" renderAs="PDF">
    <h1>Welcome to SoftInnovas!!</h1>
    <p>
        Thank You, <b><apex:outputText value="{!Account.Name}"></apex:outputText></b> for becoming a new Account with Falcons_3.
    </p>
    <p>Your Account details are:</p>
    <table>
        <tr>
            <th>Account Name: </th><td><apex:outputText value="{!Account.Name}"></apex:outputText></td>
        </tr>
        <tr>
            <th>Account Rep: </th><td><apex:outputText value="{!Account.Owner.Name}"></apex:outputText></td>
        </tr>
        <tr>
            <th>Customer Since: </th>
            <td>
                <apex:outputText value="{0,date,long}">
                    <apex:param value="{!Account.CreatedDate}" />
                </apex:outputText>
            </td>
        </tr>
    </table>
</apex:page>